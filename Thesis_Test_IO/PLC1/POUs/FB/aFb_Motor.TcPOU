<?xml version="1.0" encoding="utf-8"?>
<TcPlcObject Version="1.1.0.1" ProductVersion="3.1.4024.4">
  <POU Name="aFb_Motor" Id="{deea6eae-00c4-4d52-adc2-0d6a9e27c1a4}" SpecialFunc="None">
    <Declaration><![CDATA[FUNCTION_BLOCK aFb_Motor
VAR_INPUT
	Mode: aE_Mode := aE_Mode.Manual;
	
	//Manual
	Start: BOOL;
	Stop: BOOL;
	SetSpeed: LREAL;
	Reset1: BOOL;
	
	//Auto
	RunCondition: BOOL;
	StopCondition: BOOL;
	SpeedCondition: LREAL;
	
	//Others
	RunFeedback: BOOL;
	Interlock: BOOL;
END_VAR
VAR_OUTPUT
	Cmd: BOOL;
	Fault: BOOL;
	Speed: LREAL;
END_VAR
VAR
	{attribute 'hide'}
	fbTon: TON;
	{attribute 'hide'}
	fbPID: FB_BasicPID;
END_VAR
]]></Declaration>
    <Implementation>
      <ST><![CDATA[CASE Mode OF 
	aE_Mode.Manual: 
		Cmd := (Cmd OR Start) AND NOT Stop AND NOT Fault AND NOT Interlock;
	aE_Mode.Auto:
		Cmd := (Cmd OR RunCondition) AND NOT StopCondition AND NOT Fault AND NOT Interlock;
	aE_Mode.Service:
		Cmd := (Cmd OR Start) AND NOT Stop AND NOT Fault;
END_CASE

IF Cmd THEN
	IF Mode = aE_Mode.Auto THEN
		fbPID.fSetpointValue := SpeedCondition;
	ELSE
		fbPID.fSetpointValue := SetSpeed; 
	END_IF
ELSE 
	fbPID.fSetpointValue := 0;
END_IF
fbPID(fActualValue:= Speed, fCtrlCycleTime:= 0.09, fKp:= 1);
Speed:= fbPID.fCtrlOutput;
IF fbPID.bReset THEN
	fbPID.bReset := FALSE;
END_IF

fbTon(IN := Cmd, PT := T#5S);
IF fbTon.Q AND NOT RunFeedback THEN
	Fault := TRUE;
END_IF

IF Reset1 THEN
	Fault := FALSE;
	fbPID.bReset := TRUE;
END_IF]]></ST>
    </Implementation>
